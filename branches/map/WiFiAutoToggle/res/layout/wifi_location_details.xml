<?xml version="1.0" encoding="utf-8"?>
<!-- version = "$Id: list_item_details_edit.xml 8 2011-09-27 00:34:56Z andappfun $"; -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView android:text="@string/wifiLocationDetailsEditHeader"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:textColor="#FF000000" android:background="#FFC0C0C0" />
	<ScrollView android:id="@+id/wifiLocationscrollView"
		android:layout_height="wrap_content" android:layout_width="match_parent">
		<LinearLayout android:layout_width="match_parent"
			android:id="@+id/wifiLocationlinearLayout" android:layout_height="wrap_content"
			android:orientation="vertical">
			<EditText android:layout_height="wrap_content"
				android:layout_width="match_parent" android:text="@string/wifiLocationDetailsEditLocation"
				android:id="@+id/wifiLocationDetailsEditLocationName">
			</EditText>
			<TableLayout android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/wifiLocationEditTable"
				android:stretchColumns="1">
				<TableRow>
					<TextView android:layout_column="1" android:padding="3dip"
						android:text="@string/wifiLocationDetailsEditAdded" />
					<TextView android:gravity="right" android:padding="3dip"
						android:id="@+id/wifiLocationDetailsEditAddedDateTime" />
				</TableRow>
				<TableRow>
					<TextView android:layout_column="1" android:padding="3dip"
						android:text="@string/wifiLocationDetailsEditLatitude" />
					<TextView android:gravity="right" android:padding="3dip"
						android:id="@+id/wifiLocationDetailsEditLatitude" />
				</TableRow>
				<TableRow>
					<TextView android:layout_column="1" android:padding="3dip"
						android:text="@string/wifiLocationDetailsEditLongitude" />
					<TextView android:gravity="right" android:padding="3dip"
						android:id="@+id/wifiLocationDetailsEditLongitude" />
				</TableRow>
				<TableRow>
					<TextView android:layout_column="1" android:padding="3dip"
						android:text="@string/wifiLocationDetailsEditAccuracy" />
					<TextView android:gravity="right" android:padding="3dip"
						android:id="@+id/wifiLocationDetailsEditAccuracy" />
				</TableRow>
			</TableLayout>
		</LinearLayout>
	</ScrollView>
	<TableLayout android:id="@+id/listItemsDetailsEditButtonsTable"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:background="#FFC0C0C0" android:stretchColumns="*">
		<TableRow>
			<Button android:id="@+id/wifiLocationDetailsEditSave"
				android:text="@string/wifiLocationDetailsEditSave"
				android:layout_height="wrap_content" android:layout_width="match_parent">
			</Button>
			<Button android:id="@+id/wifiLocationDetailsEditDelete"
				android:text="@string/wifiLocationDetailsEditDelete"
				android:layout_height="wrap_content" android:layout_width="match_parent">
			</Button>
			<Button android:id="@+id/wifiLocationDetailsEditCancel"
				android:text="@string/wifiLocationDetailsEditCancel"
				android:layout_height="wrap_content" android:layout_width="match_parent">
			</Button>
		</TableRow>
	</TableLayout>
</LinearLayout>

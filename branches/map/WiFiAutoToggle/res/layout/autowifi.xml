<?xml version="1.0" encoding="utf-8"?>
<!-- version = "$Id$"; -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">

	<!-- Wi-Fi button -->
	<CheckedTextView android:id="@+id/autowifiCheckedTextView"
		android:textSize="24sp" android:textStyle="bold"
		android:layout_height="wrap_content" android:checkMark="?android:attr/listChoiceIndicatorMultiple"
		android:text="@string/autowifiButtonLabel" android:layout_width="match_parent"
	 	android:focusable="true" android:gravity="center_vertical"/>

	<!-- current location title -->
	<TextView android:id="@+id/autowifiCurrentLocation"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:text="@string/autowifiCurrentLocation" android:background="#FFC0C0C0"
		android:textColor="#FF000000" />

	<TextView android:id="@+id/autowifiLocationName"
		android:gravity="left" android:textSize="24sp" android:textStyle="bold"
		android:layout_height="wrap_content" android:layout_width="fill_parent" />

	<TableLayout android:id="@+id/autowifiLocationTable"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:stretchColumns="1">
		<TableRow>
			<TextView android:layout_column="1" android:padding="3dip"
				android:text="@string/autowifiLatitude" />
			<TextView android:gravity="right" android:padding="3dip"
				android:id="@+id/autowifiLatitude" />
		</TableRow>
		<TableRow>
			<TextView android:layout_column="1" android:padding="3dip"
				android:text="@string/autowifiLongitude" />
			<TextView android:gravity="right" android:padding="3dip"
				android:id="@+id/autowifiLongitude" />
		</TableRow>
		<TableRow>
			<TextView android:layout_column="1" android:padding="3dip"
				android:text="@string/autowifiAccuracy" />
			<TextView android:gravity="right" android:padding="3dip"
				android:id="@+id/autowifiAccuracy" />
		</TableRow>
	</TableLayout>

	<!-- location list divider -->
	<TextView android:id="@+id/autowifiLocations"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:text="@string/autowifiLocations" android:background="#FFC0C0C0"
		android:textColor="#FF000000" />

	<!-- location list -->
	<ListView android:id="@android:id/list" android:layout_width="match_parent"
		android:layout_height="match_parent" android:layout_weight="1"
		android:drawSelectorOnTop="false" />

	<!-- text displayed when there no items on the list -->
	<TextView android:id="@android:id/empty" android:layout_width="match_parent"
		android:layout_height="match_parent" android:text="@string/listEmpty" />
</LinearLayout>